<AnchorPane fx:id="sidePanel" prefHeight="700.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gameofthrones.SidePanel">
